@model PSEBONLINE.Models.AssociateModel
@{ ViewBag.Title = "Building Safety Certificate Details";
    Layout = "~/Views/Shared/_Headerui.cshtml"; }
@using (Html.BeginForm("RoomDetails", "AssociateCommuni", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="row">
        <div class="col-md-12">@Html.Partial("_AssociateHeading")</div>
        <div class="clearfix"></div>
        <div class="col-md-3">
            @Html.Partial("_AssociateMenu")
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12"><h4>Room Details</h4></div>
                <div class="col-md-12 text-right pb-4"><a href="" data-toggle="modal" data-target="#myModalAddRoomForm" class="btn">Add New</a></div>
                <div class="col-md-12">
                    @if (Model.RoomDetailsModelList != null)
                    {
                        <table class="table table-bordered">
                            <thead>
                                @{
                                    //int totalrooms = Model.RoomDetailsModelList.Sum(item => item.Quantity ?? 0);

                                    int totalrooms = Model.RoomDetailsModelList.Sum(item => item.Quantity);
                                }
                                <tr>
                                    <th scope="col">Total Entry</th>
                                    <th scope="col"></th>
                                    <th scope="col">Total Rooms: @totalrooms</th>
                                    <th scope="col"></th>
                                    <th scope="col">
                                        Total Covered Area (Sq. Ft.)
                                    </th>

                                    <th scope="col">
                                    </th>
                                    <th scope="col">
                                    </th>
                                    <th scope="col">
                                    </th>
                                </tr>

                                <tr>
                                    <th scope="col">Sr No.</th>
                                    <th scope="col">Room Type</th>
                                    <th scope="col">Floor Names</th>
                                    <th scope="col">Height</th>
                                    <th scope="col">
                                        Width
                                    </th>

                                    <th scope="col">
                                        Quantity
                                    </th>
                                    <th scope="col">
                                        Area (Sq. Ft.)

                                    </th>
                                    <th scope="col">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RoomDetailsModelList != null)
                                {
                                    int Count = 0;
                                    foreach (var room in Model.RoomDetailsModelList)
                                    {
                                        Count = Count + 1;
                                        <tr>
                                            <td>@Count</td>
                                            <td>@room.RoomType</td>
                                            <td>@room.FloorName</td>
                                            <td>@room.Height</td>
                                            <td>@room.width</td>
                                            <td>@room.Quantity</td>
                                            <td>@room.Area</td>
                                            <td>
                                                @Html.ActionLink("Delete", "ActionDeleteRoomDetails", "AssociateCommuni", new { id = @room.Id, SCHL = @room.SCHL, act = "D" }, new { onclick = "return confirm('Are you sure want to Delete ?');" })
                                            </td>


                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    }

                    else
                    {
                            <h2>Record Not Found</h2>
                        
                    }
                </div>


            </div>


        </div>
    </div>

    <!--Add Room Form-->

    <div class="modal fade" id="myModalAddRoomForm" role="dialog">
        <div class="modal-dialog modal-dialog-centered" style="width: 50%; position:unset">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add New Room</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5">&nbsp Room Type<span class="rqf">*</span></div>
                            <div class="col-md-7">@Html.DropDownListFor(a => a.RoomDetailsModel.RoomType, new SelectList(ViewBag.roomtype, "Value", "Text", ViewBag.Selectedroomtype), "---Select ---", new { @required = "required", @class = "" })</div>
                        </div>

                        <div class="col-md-12">
                            <div class="col-md-5">&nbsp Floor Name<span class="rqf">*</span></div>
                            <div class="col-md-7">@Html.DropDownListFor(a => a.RoomDetailsModel.FloorName, new SelectList(ViewBag.floorName, "Value", "Text", ViewBag.SelectedfloorName), "---Select ---", new { @required = "required", @class = "" })</div>
                        </div>

                        <div class="col-md-12">
                            <div class="col-md-5">
                                &nbsp Height (Sq. Ft.)
                                <span class="rqf">*</span>
                            </div>
                            <div class="col-md-7">

                                @Html.TextBoxFor(a => a.RoomDetailsModel.Height, new { @required = "required", @id = "height", @class = "form-control", @oninput = "this.value = this.value.replace(/[^0-9.]/g, '');" })
                                @*<input type="text" asp-for="@Model.RoomDetailsModel.Height" value="" class="form-control" placeholder="Height" name="Height">*@
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="col-md-5">
                                &nbsp Width (Sq. Ft.)
                                <span class="rqf">*</span>
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(a => a.RoomDetailsModel.width, new { @required = "required", @id = "width", @class = "form-control", @oninput = "this.value = this.value.replace(/[^0-9.]/g, '');" })
                                @*<input type="text" asp-for="@Model.RoomDetailsModel.width" value="" class="form-control" placeholder="width" name="width">*@

                            </div>

                        </div>

                        <div class="col-md-12">
                            <div class="col-md-5">
                                &nbsp Quantity
                                <span class="rqf">*</span>
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(a => a.RoomDetailsModel.Quantity, new { @required = "required", @id = "quantity", @oninput = "this.value = this.value.replace(/[^0-9.]/g, '');", @class = "form-control" })

                                @* <input type="text" asp-for="@Model.RoomDetailsModel.Quantity" value="" class="form-control" placeholder="Quantity" name="Quantity">*@

                            </div>

                        </div>

                        <div class="col-md-12">
                            <div class="col-md-5">
                                &nbsp Area
                                <span class="rqf">*</span>
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(a => a.RoomDetailsModel.Area, new { @required = "required", @class = "form-control ", @id = "Area" })
                                @Html.HiddenFor(a => a.RoomDetailsModel.SCHL, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="col-md-12 pt-3 pb-3">

                            <div class="col-md-10 text-center">
                                <input type="submit" class="btn btn-primary" value="Save" />
                                @*@Html.ActionLink("Save", "SaveRoomDetails")*@
                                @*<button @Html.ActionLink("DisplayText", "Index", "Home", class="btn btn-primary">Save</button>*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <!--Add Room Form-->
}


