<script>
    function calculateArea() {
        var height = parseFloat(document.getElementById("height").value);
        var width = parseFloat(document.getElementById("width").value);
        var quantity = parseFloat(document.getElementById("quantity").value);

        if (!isNaN(height) && !isNaN(width) && !isNaN(quantity)) {
            var totalArea = (height * width) * quantity;

            // Update the corresponding model property with the calculated value
            document.getElementById("Area").value = totalArea;
        } else {

            document.getElementById("Area").value = ""; // Clear the model property value
        }
    }

    // Bind the calculateArea function to both "Enter" key press and input event
    document.getElementById("height").addEventListener("keydown", function (event) {
        if (event.keyCode === 13) {
            calculateArea();
        }
    });

    document.getElementById("width").addEventListener("keydown", function (event) {
        if (event.keyCode === 13) {
            calculateArea();
        }
    });

    document.getElementById("quantity").addEventListener("keydown", function (event) {
        if (event.keyCode === 13) {
            calculateArea();
        }
    });

    document.getElementById("height").addEventListener("input", calculateArea);
    document.getElementById("width").addEventListener("input", calculateArea);
    document.getElementById("quantity").addEventListener("input", calculateArea);
</script>



