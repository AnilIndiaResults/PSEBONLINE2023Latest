<h1>Download Image</h1>
@using (Html.BeginForm("DownloadImage", "Report", FormMethod.Post))
{
    <fieldset style="margin-bottom:15px">
        <legend>Search</legend>
        <form id="myForm">
            <div class="clearefix"></div>
            <div class="row">
                <div class="col-md-1">


                </div>
                <div class="col-md-2">

                    Roll No. :
                    <input type="text" id="rollno" value='@ViewBag.rollno' name="rollno" />
                </div>

                <div class="col-md-1">
                    &nbsp;<input type="submit" value="Search" name="cmd" title="Search Record" />

                </div>


                <div class="clearfix"></div>
            </div>
        </form>
    </fieldset>

    <div class="clearfix"></div>
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered" id="t01">
                <tr class="active-tr">

                    <th width="5%">Roll No</th>
                    <th width="5%">Photo</th>
                    <th width="10%">Sign</th>
                    <th width="5%">Session</th>
                    
                </tr>
                @{
                    var roll = "";
                    var photo = "";
                    var sign = "";
                    var session = "";



                    if (@Model.StoreAllData != null)
                    {
                        for (var i = 0; i < Model.StoreAllData.Tables[0].Rows.Count; i++)
                        {
                            roll = Model.StoreAllData.Tables[0].Rows[i]["roll"].ToString();
                            photo = Model.StoreAllData.Tables[0].Rows[i]["photo"].ToString();
                            sign = Model.StoreAllData.Tables[0].Rows[i]["sign"].ToString();
                            session = Model.StoreAllData.Tables[0].Rows[i]["SESSION"].ToString();
                            


                            <tr>
                                <td>@roll</td>
                                <td>
                                    <img src="https://psebdata.s3.ap-south-1.amazonaws.com/@photo" height="100px" /><br />
                                    <a href="https://psebdata.s3.ap-south-1.amazonaws.com/@photo" target="_blank">Download</a>
                                </td>
                                <td>
                                    <img src="https://psebdata.s3.ap-south-1.amazonaws.com/@sign" height="100px" /><br />
                                    <a href="https://psebdata.s3.ap-south-1.amazonaws.com/@sign" target="_blank">Download</a>
                                </td>
                                <td>@session</td>
                                
                            </tr>



                        }

                       



                    }
                }
               


            </table>
        </div>
    </div>





}
<div id="dialog" style="display: none" class="kdsfont">
