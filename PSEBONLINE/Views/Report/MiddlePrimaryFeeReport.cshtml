<h1>Middle Primary Fee Received Report</h1>
@using (Html.BeginForm("MiddlePrimaryFeeReport", "Report", FormMethod.Post))
{

    <div id="loading1"></div>
    <div class="clearfix"></div>
    <div class="row" id="divMain1">
        <div class="col-md-4">
            @*Grid Total:  @{
                if (Model != null) {  }
