                { <span>0</span>}
                }*@
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered" id="t01">
                    <tr class="active-tr">

                        <th width="5%">Class</th>
                        <th width="5%">School Type</th>
                        <th width="10%">No of Students</th>
                        <th width="5%">Registration Fee</th>
                        <th width="5%">Hard Copy Fee</th>
                        <th width="5%">Examination Fee</th>
                        <th width="10%">Late Fee</th>
                    </tr>
                    @{
                        var Class = "";
                        var SchoolType = "";
                        var NoofStudents = "";
                        var Registration = "";
                        var HardCopyFee = "";
                        var ExaminationFee = "";
                        var LateFee = "";
                        var totregfee = 0;
                        var totexmfee = 0;
                        var tothardcopyfee = 0;
                        var totlatefee = 0;


                        if (@Model.StoreAllData != null)
                        {
                            for (var i = 0; i < Model.StoreAllData.Tables[0].Rows.Count; i++)
                            {
                                Class = Model.StoreAllData.Tables[0].Rows[i]["cls"].ToString();
                                SchoolType = Model.StoreAllData.Tables[0].Rows[i]["SchoolType"].ToString();
                                NoofStudents = Model.StoreAllData.Tables[0].Rows[i]["Noc"].ToString();
                                Registration = Model.StoreAllData.Tables[0].Rows[i]["RegistrationFee"].ToString();
                                HardCopyFee = Model.StoreAllData.Tables[0].Rows[i]["HardCopyFee"].ToString();
                                ExaminationFee = Model.StoreAllData.Tables[0].Rows[i]["ExaminationFee"].ToString();
                                LateFee = Model.StoreAllData.Tables[0].Rows[i]["LateFee"].ToString();

                                totregfee += Convert.ToInt32(Registration);
                                totexmfee += Convert.ToInt32(ExaminationFee);
                                tothardcopyfee += Convert.ToInt32(HardCopyFee);
                                totlatefee += Convert.ToInt32(LateFee);


                                <tr>
                                    <td>@Class</td>
                                    <td>@SchoolType</td>
                                    <td>@NoofStudents</td>
                                    <td>@Registration</td>
                                    <td>@HardCopyFee</td>
                                    <td>@ExaminationFee</td>
                                    <td>@LateFee</td>
                                </tr>



                            }

                            <tr style="font-size:15px;">
                                <td>Total</td>
                                <td></td>
                                <td></td>
                                <td>@totregfee</td>
                                <td>@totexmfee</td>
                                <td>@tothardcopyfee</td>
                                <td>@totlatefee</td>


                            </tr>



                        }
                    }
                    @*else
        {
        <tr><td colspan="13">Record not found</td></tr>
        }*@


                </table>
            </div>
        </div>
    </div>
}
